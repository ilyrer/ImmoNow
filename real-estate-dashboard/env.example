# Frontend Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:8000

# Optional: Enable debug mode
REACT_APP_DEBUG=true

# Optional: Enable React Query DevTools
REACT_APP_ENABLE_QUERY_DEVTOOLS=true

# Optional: Mock mode (set to true to use mock data instead of real API)
REACT_APP_USE_MOCK_DATA=false

# Optional: Feature flags
REACT_APP_ENABLE_COMMUNICATIONS=true
REACT_APP_ENABLE_SOCIAL_HUB=true
REACT_APP_ENABLE_FINANCE_CALCULATOR=true
REACT_APP_ENABLE_AVM=true
REACT_APP_ENABLE_INVESTOR_DASHBOARD=true

# Optional: Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# Optional: Error tracking
REACT_APP_SENTRY_DSN=

# Optional: File upload limits
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,mp4,avi

# Optional: Pagination defaults
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Optional: Cache settings
REACT_APP_CACHE_STALE_TIME=300000
REACT_APP_CACHE_GC_TIME=600000
