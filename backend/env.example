# Backend Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default)
# No additional configuration needed

# For PostgreSQL (optional)
USE_POSTGRES=False
DB_NAME=cim_backend
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
# For local storage (default)
STORAGE_TYPE=local
MEDIA_ROOT=./media

# For AWS S3 (optional)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-central-1

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Social Media API Keys (optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OpenAI API (optional)
OPENAI_API_KEY=your-openai-api-key

# OpenRouter/DeepSeek V3.1 Configuration
# Get your API key from: https://openrouter.ai/keys
# WICHTIG: Für kostenlose Modelle musst du in den Privacy Settings 
#          "Allow free models" aktivieren: https://openrouter.ai/settings/privacy
OPENROUTER_API_KEY=sk-or-v1-...
OPENROUTER_BASE=https://openrouter.ai/api/v1

# Wähle ein Modell:
# Kostenlos (benötigt Privacy Setting):
OPENROUTER_MODEL=deepseek/deepseek-chat-v3.1:free
# Oder bezahlt (sehr günstig, $0.14 per 1M tokens):
# OPENROUTER_MODEL=deepseek/deepseek-chat

OPENROUTER_TIMEOUT=60
OPENROUTER_MAX_TOKENS=2048
SITE_URL=https://immonow.com
SITE_NAME=ImmoNow Dashboard

# =====================================================
# SOCIAL MEDIA / OAUTH CONFIGURATION
# =====================================================

# Token Encryption Key (Fernet - generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-fernet-key-here

# OAuth Callback Base URL
OAUTH_CALLBACK_BASE_URL=http://localhost:3000/oauth/callback

# Meta (Facebook/Instagram) OAuth
# Create app at: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
# Required Permissions: pages_read_engagement, pages_manage_posts, instagram_basic, instagram_content_publish

# Instagram Business Account
# Note: Instagram API requires a Facebook Page linked to an Instagram Business Account
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

# LinkedIn OAuth
# Create app at: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
# Required Scopes: r_liteprofile, r_organization_social, w_organization_social

# YouTube / Google OAuth
# Create app at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Required Scopes: youtube.upload, youtube.readonly

# Twitter/X OAuth (Legacy - not priority)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# =====================================================
# PROPERTY PORTAL INTEGRATIONS
# =====================================================

# ImmoScout24 OAuth
# Request API access at: https://api.immobilienscout24.de/
IMMOSCOUT24_CLIENT_ID=your-immoscout24-client-id
IMMOSCOUT24_CLIENT_SECRET=your-immoscout24-client-secret
IMMOSCOUT24_USE_SANDBOX=True

# Immowelt OAuth  
# Request API access at: https://www.immowelt.de/business
IMMOWELT_CLIENT_ID=your-immowelt-client-id
IMMOWELT_CLIENT_SECRET=your-immowelt-client-secret
IMMOWELT_USE_SANDBOX=True

# =====================================================
# CELERY / BACKGROUND TASKS (for Auto-Publishing)
# =====================================================

# Redis for Celery broker and rate limiting
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# Auto-publish schedule (default: 10x per day = every 2.4 hours)
AUTO_PUBLISH_INTERVAL_HOURS=2.4

# OCR (optional)
OCR_API_URL=https://api.ocr.space/parse/image
OCR_API_KEY=your-ocr-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (erstelle diese in Stripe Dashboard)
STRIPE_PRICE_FREE=  # Leer - Free hat keine Price ID
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# Frontend URL für Stripe Redirects
FRONTEND_URL=http://localhost:3000