# Frontend Environment Variables
# Copy this file to .env.local and update the values
# Note: Vite uses VITE_ prefix instead of REACT_APP_

# API Configuration
VITE_API_URL=http://localhost:8000

# Optional: Enable debug mode
VITE_DEBUG=true

# Optional: Enable React Query DevTools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Optional: Mock mode (set to true to use mock data instead of real API)
VITE_USE_MOCK_DATA=false

# Optional: Feature flags
VITE_ENABLE_COMMUNICATIONS=true
VITE_ENABLE_SOCIAL_HUB=true
VITE_ENABLE_FINANCE_CALCULATOR=true
VITE_ENABLE_AVM=true
VITE_ENABLE_INVESTOR_DASHBOARD=true

# Optional: Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Optional: Error tracking
VITE_SENTRY_DSN=

# Optional: File upload limits
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,mp4,avi

# Optional: Pagination defaults
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Optional: Cache settings
VITE_CACHE_STALE_TIME=300000
VITE_CACHE_GC_TIME=600000
